<div class="row">
<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.input :email, :autofocus => true %>
  <%= f.input :password %>
<div class="row">
  <% if devise_mapping.rememberable? %>
    	<%= f.label :remember_me, class: 'left' %><%= f.check_box :remember_me, class: 'left' %> 
  <% end %>
</div>
  <div class="row">
  	<%= f.submit "Sign in", class: 'button radius right' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
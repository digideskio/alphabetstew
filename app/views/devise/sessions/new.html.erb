<div class="row">
	<h2>Sign in</h2>
	
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<%= devise_error_messages! %>
	<div class="large-5 small-9 columns">
		<%= f.input :email %>
		<%= f.input :password %>
		<% if devise_mapping.rememberable? %>
		<div>
			<%= f.check_box :remember_me %> <%= f.label :remember_me, class: "left" %>
		</div>
		<% end %>
		<%= f.submit "Sign in", class:'small button radius right' %>
		<% end %>

		<div class="row">
			<hr />
			<%= render "devise/shared/links" %>
		</div>

	</div>
</div>

